<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.bzaharic.nsguideapp.MainActivity">

    <ImageButton
        android:id="@+id/btn_search"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnAround"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:src="@drawable/button_search"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/btnAround"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="53dp"
        android:onClick="btnAround"
        android:scaleType="fitXY"
        android:src="@drawable/button_around" />

    <ImageButton
        android:id="@+id/btnTour"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/btn_search"
        android:layout_alignStart="@+id/btn_search"
        android:layout_alignTop="@+id/btn_favorite"
        android:onClick="btnTour"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/button_tour" />

    <ImageButton
        android:id="@+id/btn_favorite"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/btnAround"
        android:layout_alignStart="@+id/btnAround"
        android:layout_below="@+id/btnAround"
        android:layout_marginTop="122dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/button_favorite"
        android:onClick="btnFavorite"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnAround"
        android:layout_alignRight="@+id/btnAround"
        android:layout_below="@+id/btnAround"
        android:layout_marginTop="21dp"
        android:text="U blizini"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/btn_search"
        android:layout_alignStart="@+id/btn_search"
        android:text="Pretraga"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_favorite"
        android:layout_alignStart="@+id/btn_favorite"
        android:layout_below="@+id/btn_favorite"
        android:layout_marginTop="31dp"
        android:text="Omiljeno"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:text="Pesacke rute"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="NSGuide"
        android:textColor="#FFF"
        android:textSize="40sp" />

</RelativeLayout>
